<% if notice %><p id="notice"><%= notice %></p><% end %>

<h1 class="page-header"><%= t('purchase_orders.title') %></h1>
<div id="toolbar">
    <%= link_to t('purchase_orders.new'), new_purchase_order_path, :class => 'btn btn-primary' %>
</div>
<table data-toggle="table"
       data-classes="table"
       data-sort-name="date_received"
       data-sort-order="desc"
       data-url="/purchase_orders"
       data-pagination="true"
       data-search="true"
       data-height="500"
       data-flat="true"
       data-toolbar="#toolbar">
    <thead>
    <tr>
        <th data-field="reference" data-sortable="true"><%= t('fields.order_number') %></th>
        <th data-field="customer.name" data-sortable="true"><%= t('fields.customer') %></th>
        <th data-field="work.name" data-sortable="true"><%= t('fields.work') %></th>
        <th data-field="id" data-formatter="actionsFormatter"><%= t('actions.title') %></th>
    </tr>
    </thead>
</table>
<script>
function actionsFormatter(value) {
  var actions = '';
  var delmsg = '<%= t("actions.sure") %>';  
  actions += '<a style="padding-right:12px;" href="/purchase_orders/' + value + '"><i class="glyphicon glyphicon-eye-open"></i></a>';
  actions += '<a style="padding-right:12px;" href="/purchase_orders/' + value + '/edit"><i class="glyphicon glyphicon-pencil"></i></a>';
  actions += '<a data-method="delete" data-confirm="' + delmsg + '" style="padding-right:12px;" href="/purchase_orders/' + value + '"><i class="glyphicon glyphicon-trash"></i></a>';
  return actions;
}
</script>