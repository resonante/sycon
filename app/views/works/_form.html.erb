
<div class="row">
  <div class="col-xs-10 col-md-6">

    <%= form_for(@work) do |f| %>
      <% if @work.errors.any? %>
        <div class="alert alert-danger alert-dismissible fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
            <strong><%= pluralize(@work.errors.count, "error") %> prohibited this customer from being saved:</strong>
            <ul>
            <% @work.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>        
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label t('customers.title').singularize %><br>
        <%= f.select(:customer_id, {}, {}, { class: 'form-control' }) do %>
          <% @customers.each do |u| -%>
            <% if u.id == @work.customer_id -%>
              <%= content_tag(:option, u.name, value: u.id, selected: 'selected') %>
            <% else -%>
              <%= content_tag(:option, u.name, value: u.id) %>
            <% end -%>
          <% end %>
        <% end if !@customers.empty? %>
      </div> 
      <div class="form-group">
        <%= f.label t('fields.name') %><br>
        <%= f.text_field :name, class: 'form-control' %>
      </div>          
      <div class="form-group">
        <%= f.label t('fields.address') %><br>
        <%= f.text_area :address, class: 'form-control' %>
      </div>
      <div class="form-group form-inline">
        <%= f.label t('fields.date') %><br>
        <%= f.date_select :date, {}, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label t('fields.description') %><br>
        <%= f.text_area :description, class: 'form-control' %>
      </div>              
      <div class="form-group">
        <%= f.submit t('actions.save'), :class => 'btn btn-primary' %>
      </div>
      <hr>
    <% end %>

  </div>
  
  <div class="col-xs-8 col-md-6"></div>

</div>