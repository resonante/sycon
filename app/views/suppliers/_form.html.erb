<div class="row">
  <div class="col-xs-10 col-md-6">

<%= form_for(@supplier) do |f| %>
  <% if @supplier.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@supplier.errors.count, "error") %> prohibited this supplier from being saved:</h2>

      <ul>
      <% @supplier.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label t('suppliers.name') %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label t('works.title').singularize %><br>
    <%= f.select(:work_id, {}, {}, { class: 'form-control' }) do %>
      <% @works.each do |w| -%>
        <% if w.id == @supplier.work_id -%>
          <%= content_tag(:option, w.name, value: w.id, selected: 'selected') %>
        <% else -%>
          <%= content_tag(:option, w.name, value: w.id) %>
        <% end -%>
      <% end %>
    <% end if !@works.empty? %>
  </div>  
  <div class="form-group">
    <%= f.label t('suppliers.agent') %><br>
    <%= f.text_field :agent, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label t('fields.rif') %><br>
    <%= f.text_field :rif, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label t('fields.email') %><br>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label t('fields.address') %><br>
    <%= f.text_area :address, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label t('fields.phone') %><br>
    <%= f.text_field :phone, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label t('fields.mobile') %><br>
    <%= f.text_field :mobile, class: 'form-control' %>
  </div> 
  <div class="form-group">
    <%= f.label t('fields.state') %><br>
    <%= f.text_field :state, class: 'form-control' %>
  </div> 
  <div class="form-group">
    <%= f.label t('fields.town') %><br>
    <%= f.text_field :town, class: 'form-control' %>
  </div>   
  <div class="form-group">
    <%= f.label t('fields.description') %><br>
    <%= f.text_area :description, class: 'form-control' %>
  </div>               
  <div class="form-group">
    <%= f.submit t('actions.save'), :class => 'btn btn-primary' %>
  </div>
  <hr>
<% end %>

  </div>
  
  <div class="col-xs-8 col-md-6"></div>

</div>